
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.javier.ejemplo.MainActivity">

    <RelativeLayout
        android:id="@+id/Part1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/door1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_toEndOf="@+id/view"
            android:text="Puerta1"
            android:textSize="10sp" />

        <View
            android:id="@+id/mesa1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="false"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/door1"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/mesa1"
            android:orientation="vertical">


        </LinearLayout>


        <View
            android:id="@+id/view"
            android:layout_width="5dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Part2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/door2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toStartOf="@+id/mesa2"
            android:text="Puerta2"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/Linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/mesa2"
            android:orientation="vertical">


        </LinearLayout>


        <View
            android:id="@+id/vista1"
            android:layout_width="5dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark" />

        </RelativeLayout>

    <View
        android:id="@+id/mesa2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Part1"
        android:layout_centerInParent="false"
        android:layout_marginStart="124dp"
        android:layout_marginTop="72dp"
        android:background="@color/colorPrimaryDark" />
</RelativeLayout>


